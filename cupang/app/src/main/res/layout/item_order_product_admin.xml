<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView_product_order_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lg"
        android:background="#E0E0E0"
        android:contentDescription="Product Image"
        android:layout_marginEnd="12dp"
        app:cornerRadius="6dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk (Merk)"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_product_qty_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah: 1x"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_price_order_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 150.000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#009688"/>

</LinearLayout>