<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_blue"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="50dp"
        android:paddingBottom="70dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lg"

            android:layout_gravity="center_horizontal"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Kami"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Kontak Toko"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <!-- Konten -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Foto Toko -->
                <ImageView
                    android:id="@+id/storeImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1"
                    android:layout_marginBottom="16dp"
                     />

                <!-- Nama Toko -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasar Ikan Hias Semarang "
                    android:textColor="#186DEC"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Alamat Toko -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. K.H. Agus Salim No.22-23, Purwodinatan, Kec. Semarang Tengah, Kota Semarang, Jawa Tengah 50137"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: pasarikanhias@gmail.com"
                    android:textColor="#555555"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Telepon -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telepon: +62 812-3456-7890"
                    android:textColor="#555555"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Tombol Kembali -->
                <Button
                    android:id="@+id/btnback"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Kembali ke Profile"
                    android:backgroundTint="#03A9F4"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="12dp" />

                <TextView
                    android:id="@+id/main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
