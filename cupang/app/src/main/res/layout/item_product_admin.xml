<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/product_image_admin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lg"
            android:background="#E0E0E0"
            android:contentDescription="Product Image"
            android:layout_marginEnd="12dp"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk (Merk)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/product_category_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Cupang Impor"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/product_price_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 150.000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#009688"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/product_stock_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok: 10"
                android:textSize="13sp"
                android:textColor="#424242"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btn_edit_product"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_change_circle_24"
                android:contentDescription="Edit Product"
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/btn_delete_product"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sampah"
                android:contentDescription="Delete Product"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>