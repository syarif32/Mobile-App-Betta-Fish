<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_blue"
        android:paddingHorizontal="23dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/lg"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:contentDescription="Logo Perusahaan" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Produk"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi lengkap produk pilihan Anda"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/white_alpha_80"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:id="@+id/imageViewProduct"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@color/grey_200"
                    android:layout_marginBottom="25dp"
                    android:contentDescription="Gambar Produk" />
                <TextView
                    android:id="@+id/textViewProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk yang Sangat Panjang dan Detail"
                    android:textColor="@color/blue_700"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textViewProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 125.000"
                    android:textSize="24sp"
                    android:textColor="@color/green_700"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="25dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"
                    android:layout_marginBottom="25dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kategori:"  android:textSize="15sp"
                            android:textColor="@color/grey_600" />
                        <TextView
                            android:id="@+id/textViewProductCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lokal Impor"
                            android:textSize="15sp"
                            android:textColor="@color/blue_900" android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Satuan:" android:textSize="15sp"
                            android:textColor="@color/grey_600" />
                        <TextView
                            android:id="@+id/textViewProductUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pcs"
                            android:textSize="15sp"
                            android:textColor="@color/blue_900" android:textAlignment="textEnd"
                          />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stok Tersedia:" android:textSize="15sp"
                            android:textColor="@color/grey_600" />
                        <TextView
                            android:id="@+id/textViewProductStock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="150"
                            android:textSize="15sp"
                            android:textColor="@color/green_500"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status:" android:textSize="15sp"
                            android:textColor="@color/grey_600" />
                        <TextView
                            android:id="@+id/productStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tersedia"
                            android:textSize="15sp"
                            android:textColor="@color/green_500"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Produk"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_900"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:id="@+id/textViewProductDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ini adalah deskripsi detail dari produk. Desain aplikasi startup di Indonesia seringkali menekankan pada kejelasan dan kemudahan informasi, memastikan pengguna dapat dengan cepat memahami apa yang ditawarkan produk ini. Deskripsi yang ringkas namun informatif sangat penting."
                    android:textSize="15sp"
                    android:textColor="@color/grey_700"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="30dp" />

                <TextView
                    android:id="@+id/textViewProductViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dilihat: 1.234 kali"
                    android:textSize="13sp"
                    android:textColor="@color/grey_500"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"/>

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:backgroundTint="@color/blue_500"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:paddingVertical="15dp"
                    app:cornerRadius="12dp" />
                <TextView
                    android:id="@+id/main"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>