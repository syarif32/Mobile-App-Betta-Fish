<?xml version="1.0" encoding="utf-8"?>


<resources>
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">#616161</item>
        <item name="android:tint">#2196F3</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SummaryRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#42A5F5</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#FFC107</item>
        <item name="android:statusBarColor">#42A5F5</item>
    </style>

    <style name="DetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:minWidth">120dp</item> </style>

    <style name="DetailValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SummaryValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SummaryValueStyle.Highlight">
        <item name="android:textColor">#1976D2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailLabelPayment" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DetailValuePayment" parent="DetailLabelPayment">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>
</resources>